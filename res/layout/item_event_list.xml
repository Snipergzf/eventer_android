<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:descendantFocusability="blocksDescendants"><!-- 为突出卡片效果，需设置左右padding,上下通过listView的divider设置 -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"  
    android:descendantFocusability="beforeDescendants"><!-- 给每个item增加background -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="匿名发布"
            android:textColor="#92000000"
            android:textSize="12sp" />
      <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/tv_publisher"
            android:text="热门"
            android:visibility="gone"
            android:textColor="#92000000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10px"
            android:text="晚上7:51"
            android:textColor="#75000000"
            android:textSize="12sp" />
    </RelativeLayout>
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="12dp"
      android:paddingRight="12dp"
       android:paddingTop="8dp"
       android:orientation="vertical"> 
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="内容"
        android:textColor="#353535"
        android:textSize="14sp" />
    <TextView 
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间"
        android:paddingTop="2dp"
        android:textColor="@color/caldroid_gray"
        android:visibility="gone"
        android:textSize="12sp"
        />
    <ImageView 
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/default_avatar"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#03000000"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
       <LinearLayout 
               android:id="@+id/li_collect"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_horizontal"
               android:layout_height="match_parent"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:src="@drawable/collection_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:text="@string/collect"
                android:textSize="12sp"/>
           
         </LinearLayout>
        <View 
                android:layout_width="0.3dp"
                android:layout_height="15dp"
                android:background="@color/divider_list"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
          <LinearLayout 
              android:id="@+id/li_share"
              android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center_horizontal"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_share_forwarding_down" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:textSize="12sp"
                android:text="@string/share"/>
        </LinearLayout>
        <View 
                android:layout_width="0.3dp"
                android:layout_height="15dp"
                android:background="@color/divider_list"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
         <LinearLayout 
               android:id="@+id/li_comment"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_horizontal"
               android:layout_height="match_parent"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:src="@drawable/btn_share_comment_down" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:text="@string/comment"
                android:textSize="12sp"/>
            
         </LinearLayout>
    </LinearLayout>

</LinearLayout>

</FrameLayout>