<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical" 
   >
    
  <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/caldroid_holo_blue_light"
        android:gravity="center_vertical" >    
      <Button
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#fff"
               
                android:background="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/moreselected"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        
         <Button
            android:id="@+id/search"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:text="@string/search"
            android:textColor="#fff"
            android:textSize="13sp" />
    </RelativeLayout>

  <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingTop="10dip" >

            <Button
                android:id="@+id/activity_tab_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/morecommend"
                android:layout_margin="5dp"
                android:textColor="#5BC4ED"
                android:background="@drawable/tv_bg"
                android:textSize="18sp" />

            <Button
                android:id="@+id/activity_tab_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/studyview"
                android:layout_margin="5dp"
                android:textColor="#5BC4ED"
                android:background="@drawable/tv_bg"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/activity_tab_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/workview"
                android:layout_margin="5dp"
                android:textColor="#5BC4ED"
                android:background="@drawable/tv_bg"
                android:textSize="18sp" />
            
            <Button
                android:id="@+id/activity_tab_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/entertainmentview"
                android:layout_margin="5dp"
                android:textColor="#5BC4ED"
                android:background="@drawable/tv_bg"
                android:textSize="18sp" />    
                
            
            
             <Button
                android:id="@+id/activity_tab_5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#5BC4ED"
                android:background="@drawable/tv_bg"
                android:text="@string/lifeview"
                android:textSize="18sp" />  
        </LinearLayout>
  
  
  
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="3dip" >

            <ImageView
                android:id="@+id/iv_bottom_line"
                android:layout_width="40dip"
                android:layout_height="2dip"
                android:scaleType="matrix"
                android:src="#fff" /> 
  

 
  

    <android.support.v4.view.ViewPager
        android:id="@+id/moreselectedPager"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="#00000000"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />
     </LinearLayout>  
    </LinearLayout>  
    

    
 
    




