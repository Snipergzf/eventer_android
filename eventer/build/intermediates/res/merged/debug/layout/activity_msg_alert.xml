<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="match_parent">
     <include
        android:id="@+id/title"
        layout="@layout/top_layout"/>
     <LinearLayout
                android:id="@+id/settings"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"  
                android:background="#fff"            
                android:orientation="vertical" >
              <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_bg"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    >
                    
                  <TextView                     
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/new_msg_alert"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                   <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_alert"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       />
                </RelativeLayout>
               
                  <RelativeLayout  
                      android:id="@+id/re_alert_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                 
                    android:background="@drawable/click_bg"
                    >
                    <View
		                android:layout_width="match_parent"
		                android:layout_height="0.02dp"
		                android:layout_marginLeft="8dp"
		                android:layout_marginRight="8dp"
		                android:background="#DBDBDB" />
                  <RelativeLayout  
                      android:id="@+id/re_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                     >
	                <TextView                 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="13dp"
	                    android:paddingBottom="13dp"	                    
	                    android:text="@string/new_msg_detail"
	                    android:textColor="#353535"
	                    android:textSize="14sp" />               
	                <com.zcw.togglebutton.ToggleButton
	                       android:id="@+id/toggle_detail"
	                       android:layout_width="55dp"
	                       android:layout_height="30dp"
	                       toggle:onColor="@color/caldroid_holo_blue_light"
	                       android:layout_alignParentRight="true"
	                       android:layout_centerVertical="true"
	                       />
                </RelativeLayout>
                <TextView    
                    android:layout_below="@+id/re_temp"             
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="13dp"
                    android:text="@string/new_msg_detail_hint"
                    android:textColor="@color/caldroid_gray"
                    android:textSize="12sp" />
               
                </RelativeLayout>
                
                 
            </LinearLayout>
      <LinearLayout
                android:id="@+id/alert"
                android:layout_below="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"              
                android:orientation="vertical" >
              <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    >
                 <TextView                 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/voice"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_voice"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       />
                </RelativeLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="0.02dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#DBDBDB" />
                  <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    >
                 <TextView                     
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/shake"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_shake"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"                      
                       />
                </RelativeLayout>
                
               
            </LinearLayout>

</RelativeLayout>
