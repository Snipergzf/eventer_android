<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/caldroid_holo_blue_light" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/back"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_back"
            android:layout_toEndOf="@id/iv_back"
            android:background="@color/caldroid_holo_blue_dark" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/view_temp"
            android:layout_toEndOf="@id/view_temp"
            android:text="@string/about"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/icon"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="35dp"
        android:orientation="vertical">
        <ImageView 
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"/>
        <TextView 
            android:id="@+id/tv_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textSize="18sp"
            />
        
    </LinearLayout>
   <LinearLayout
                android:id="@+id/alert"
                android:layout_below="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"              
                android:orientation="vertical" >
              <RelativeLayout 
                    android:id="@+id/re_tell_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    android:visibility="gone"
                    >
                 <TextView                 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:text="@string/tell_friend"
                    android:textColor="#353535"
                    android:textSize="14sp" />
               <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"                   
                    android:src="@drawable/next"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.02dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"
                    android:background="#DBDBDB" />
                <RelativeLayout
                    android:id="@+id/re_our_team"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    >
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:id="@+id/img_team"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/our_team"
                        android:src="@drawable/our_team"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/img_team"
                        android:layout_toEndOf="@id/img_team"
                        android:layout_centerVertical="true"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingEnd="6dp"
                        android:paddingStart="6dp"
                        android:text="@string/our_team"
                        android:textColor="#353535"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/next"/>
                </RelativeLayout>
                
               
            </LinearLayout>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/copyright"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:textSize="12sp"
                android:textColor="#999999"
                android:gravity="center"/>
</RelativeLayout>

