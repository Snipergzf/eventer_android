<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#eee"
    android:paddingBottom="15dp">


     <RelativeLayout
        android:id="@+id/re_contact"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/btn_list_item_bg"
         android:clickable="true"
         >

        <ImageView
            android:id="@+id/iv_activityshare"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/contact"
            android:src="@drawable/default_chatroom" />

        <TextView
            android:id="@+id/tv_activityshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@id/iv_activityshare"
            android:layout_toEndOf="@id/iv_activityshare"
            android:text="@string/contact"
            android:textColor="#353535"
            android:textSize="16sp" />

    </RelativeLayout>
      
</LinearLayout>