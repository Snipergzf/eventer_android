<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context="com.eventer.app.main.RegisterActivity" >
     <RelativeLayout
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/caldroid_holo_blue_light" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="@color/caldroid_holo_blue_dark" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_temp"
            android:text="@string/reset_pwd"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
     <View
        android:layout_width="match_parent"       
        android:layout_height="0.05dp"
        android:layout_marginTop="20dp"
        android:background="#cccccc" />

   <LinearLayout 

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
	    android:paddingTop="7dp"
	    android:paddingBottom="7dp"
        android:background="@color/caldroid_white"
        >       	
	   <EditText
	        android:id="@+id/edit_pwd"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:hint="@string/register_pwd_hint"
	        android:background="#ffffff"
	        android:textColorHint="@color/caldroid_gray"
	        android:paddingTop="7dp"
	        android:paddingBottom="7dp"
	        android:paddingStart="15dp"
	        android:paddingEnd="15dp"
	        android:textSize="18sp"
	        android:singleLine="true"
	        android:maxLength="20"
	        android:inputType="textPassword"
	       />
	    <ImageButton 
	        android:id="@+id/btn_pwd_clear"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_marginStart="10dp"
	        android:layout_marginEnd="10dp"
	        android:layout_gravity="end|center_vertical"
	        android:visibility="gone"
	        android:background="@drawable/edit_clear_btn_bg"/>
	    
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.05dp"
        android:layout_marginBottom="5dp"
        android:background="#cccccc" />
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@drawable/button_blue"
        android:layout_margin="15dp"
        android:textScaleX="1.1"
        android:textSize="20sp"
        android:text="@string/submit" />
   

</LinearLayout>
