<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <RelativeLayout
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/caldroid_holo_blue_light" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <View
            android:id="@+id/view_temp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="@color/caldroid_holo_blue_dark" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_temp"
            android:text="@string/msg_alert"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>
     <LinearLayout
                android:id="@+id/settings"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"  
                android:background="#fff"            
                android:orientation="vertical" >
              <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_bg"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    >
                    
                  <TextView                     
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/new_msg_alert"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                   <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_alert"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       />
                </RelativeLayout>
               
                  <RelativeLayout  
                      android:id="@+id/re_alert_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"                 
                    android:background="@drawable/click_bg"
                    >
                    <View
		                android:layout_width="match_parent"
		                android:layout_height="0.02dp"
		                android:layout_marginLeft="8dp"
		                android:layout_marginRight="8dp"
		                android:background="#DBDBDB" />
                  <RelativeLayout  
                      android:id="@+id/re_temp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                     >
	                <TextView                 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="13dp"
	                    android:paddingBottom="13dp"	                    
	                    android:text="@string/new_msg_detail"
	                    android:textColor="#353535"
	                    android:textSize="14sp" />               
	                <com.zcw.togglebutton.ToggleButton
	                       android:id="@+id/toggle_detail"
	                       android:layout_width="55dp"
	                       android:layout_height="30dp"
	                       toggle:onColor="@color/caldroid_holo_blue_light"
	                       android:layout_alignParentRight="true"
	                       android:layout_centerVertical="true"
	                       />
                </RelativeLayout>
                <TextView    
                    android:layout_below="@+id/re_temp"             
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingBottom="13dp"
                    android:text="@string/new_msg_detail_hint"
                    android:textColor="@color/caldroid_gray"
                    android:textSize="12sp" />
               
                </RelativeLayout>
                
                 
            </LinearLayout>
      <LinearLayout
                android:id="@+id/alert"
                android:layout_below="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"              
                android:orientation="vertical" >
              <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    >
                 <TextView                 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/voice"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_voice"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       />
                </RelativeLayout>
                <View
                android:layout_width="match_parent"
                android:layout_height="0.02dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#DBDBDB" />
                  <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:background="@drawable/click_bg"
                    >
                 <TextView                     
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:text="@string/shake"
                    android:textColor="#353535"
                    android:textSize="14sp" />
                <com.zcw.togglebutton.ToggleButton
                       android:id="@+id/toggle_shake"
                       android:layout_width="55dp"
                       android:layout_height="30dp"
                       toggle:onColor="@color/caldroid_holo_blue_light"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"                      
                       />
                </RelativeLayout>
                
               
            </LinearLayout>

</RelativeLayout>
