<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/caldroid_holo_blue_light"
        android:gravity="center_vertical" >


        <RelativeLayout
            android:id="@+id/weekinfo_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/weekinfo_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:background="@drawable/ib_bg">
                <TextView
                    android:id="@+id/weekinfo_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/button2" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <ImageButton
                android:id="@+id/iv_add"
                android:layout_height="match_parent"
                android:layout_width="42dp"
                android:src="@drawable/ib_add"
                android:background="@drawable/ib_bg"
                android:layout_alignParentRight="true"
                android:padding="10dp"/>
            <ImageButton
                android:id="@+id/iv_setting"
                android:layout_height="match_parent"
                android:layout_width="42dp"
                android:src="@drawable/ib_setting"
                android:background="@drawable/ib_bg"
                android:padding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
    <com.eventer.app.view.CourseView
        android:layout_below="@id/title"
        android:id="@+id/courseview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />

</RelativeLayout>