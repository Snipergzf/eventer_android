    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="内容"
        android:textColor="#353535"
        android:textStyle="bold"
        android:textSize="14sp" />
    <TextView 
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="时间"
        android:maxLines="1"
        android:textColor="#353535"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="地点"
        android:maxLines="1"
        android:textColor="#353535"
        android:textSize="12sp"
        />
   
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#03000000"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
       <LinearLayout 
               android:id="@+id/li_collect"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_horizontal"
               android:layout_height="match_parent"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_collect"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:src="@drawable/collection_bg" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:text="@string/collect"
                android:textSize="12sp"/>
           
         </LinearLayout>
        <View 
                android:layout_width="0.3dp"
                android:layout_height="15dp"
                android:background="@color/divider_list"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
          <LinearLayout 
              android:id="@+id/li_share"
              android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:gravity="center_horizontal"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btn_share_forwarding_down" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:textSize="12sp"
                android:text="@string/share"/>
        </LinearLayout>
        <View 
                android:layout_width="0.3dp"
                android:layout_height="15dp"
                android:background="@color/divider_list"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
         <LinearLayout 
               android:id="@+id/li_comment"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:gravity="center_horizontal"
               android:layout_height="match_parent"
               android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="25dp"
                android:layout_height="25dp" 
                android:src="@drawable/btn_share_comment_down" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/caldroid_darker_gray"
                android:text="@string/comment"
                android:textSize="12sp"/>
            
         </LinearLayout>
    </LinearLayout>

</LinearLayout>

</FrameLayout>